{
  "compilerOptions": {
    "rootDir": "src",
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "*": ["*", "src/*"]
    }
  },

  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
