{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "*": ["*", "src/*"]
    }
  },

  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
